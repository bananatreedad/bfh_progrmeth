<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8">
   <center>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <VBox>
               <children>
                  <Label text="To" />
                  <TextField promptText="To Email" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label text="From" />
                  <TextField promptText="From Email" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label text="Subject" />
                  <TextField promptText="Subject of the Email" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label text="Message" />
                  <TextArea promptText="Text of the Email" />
               </children>
            </VBox>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <VBox>
                     <children>
                        <Label text="Login" />
                        <TextField prefWidth="250.0" promptText="SMTP Login" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="Password" />
                        <PasswordField prefWidth="250.0" />
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" prefHeight="27.0" prefWidth="128.0" text="send" />
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
